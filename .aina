# Go
# Opens $1 uri in $2 browser. If no browser is passed, uses Safari by default 
go(){
	if [ ! $2 ]; then
	    safari http://$1
	    return
	fi
	case $2 in
	    chrome)
	        chrome http://$1 ;;    
	    ff)
	        ff http://$1;;
	    safari)
	        safari http://$1;;
	    opera)
	        opera http://$1;;
	esac
}

